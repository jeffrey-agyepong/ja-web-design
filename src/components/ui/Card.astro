---
import {Picture} from "astro:assets";
const { icon, title, description} = Astro.props;
---
<div
  class="block max-w-sm p-6 bg-white rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800  dark:hover:bg-gray-700"
>
 <Picture src={icon} alt={title} class="w-56 h-56 mb-6 text-primary mx-auto" height={300} width={300} />
  <h3 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
    {title}
  </h3>
  <p class="font-normal text-gray-700 dark:text-gray-400">
    {description}
  </p>
</div>
