  <div class="container mx-auto">
    <div class="py-5 md:py-10 md:mt-10 px-4">
      <div class="w-full max-w-xl mx-auto p-7 bg-blue-900 dark:bg-dark-blue rounded-xl shadow-xl text-left">
        <h3 class="font-general-medium text-primary-dark dark:text-primary-light text-2xl mb-8">
          Let's talk about your project
        </h3>
        <form
          class="font-general-regular space-y-7"
          action="#"
          method="POST"
          data-netlify="true"
          data-netlify-recaptcha="true"
        netlify>
        
          <div>
            <input type="hidden" name="form-name" value="form 1" />
            <label class="block mb-2 text-lg text-primary-dark dark:text-primary-light" for="name">Name</label>
