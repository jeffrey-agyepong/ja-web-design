---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing | J.A Web Design | Edmonton, Alberta',
  description: 'Discover our flexible pricing plans for web design and development services. Choose the perfect plan for your needs. Our pricing is flexible and scalable to meet your needs.',
};
---

<Layout metadata={metadata}>


  <HeroText
    tagline=""
    title="Our Pricing Plans"
    subtitle="Choose the perfect plan for your needs. Our pricing is flexible and scalable to meet your needs."
  />



  <Prices
    title="Our prices"
    subtitle=""
    prices={[
      {
        title: 'Monthly',
        // subtitle: 'Best choice for businesses on a tight budget',
        price: '250',
        items: [
          {
            description: 'Design And Development',
          },
          {
            description: 'Includes Hosting',
          },
          {
            description: '$100 fee Per Page After 5',
          },
          {
            description: '+$250 To Add A Blog',
          },
          {
            description: 'Unlimited Edits',
          },
          {
            description: '24/7 Support',
          },
          {
            description: 'Lifetime Updates',
          },

        ],
      },
      {
        title: 'Lump Sum',
        // subtitle: 'Optimal choice for small businesses',
        price: '3000+',
        items: [
        {
            description: 'Design And Development',
          },
          {
            description: '$25/mo Hosting Fee',
          },
          {
            description: '$100 fee Per Page After 5',
          },
          {
            description: '+$250 To Add A Blog',
          },
          {
            description:"+$50/mo Unlimited Edits Add-on"
          }
        ],

        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'E-commerce',
        // subtitle: 'Optimal choice for medium-sized businesses & e-commerce stores',
        price: '5000+',
        items: [
        {
            description: 'Custom Shopify Store',
          },
          {
            description: 'Configure Any And All Apps',
          },
          {
            description: 'Integrated Shipping',
          },
          {
            description: 'Shopify Tutorial Walkthrough',
          },
          {
            description: 'Fully Editable In Shopify CMS ',
          }
        ],
      },
    ]}
  />


  <CallToAction
    title="Ready to launch your project?"
    subtitle=""
    actions={[
      {
        variant: 'primary',
        text: 'Get started now',
        href: '/contact',
      },
    ]}
  />
</Layout>
