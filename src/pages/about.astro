---
import Badges from '~/components/widgets/Badges.astro';
import Header from '~/components/ui/Header.astro';
import Steps from '~/components/widgets/Steps.astro';
import Layout from '~/layouts/PageLayout.astro';
import Skills from '~/components/widgets/Skills.astro';
import TrustLogos from '~/components/ui/TrustLogos.astro';

const metadata = {
  title: 'About Us | J.A Web Design | Edmonton, Alberta',
  description:"Get to know the face behind J.A Web Design - a freelancer turned NAIT student with a passion for crafting modern, user-friendly websites. With five years of experience in web development and design, I specialize in creating fully responsive websites using the latest technologies. From small businesses to personal portfolios, I am committed to delivering high-quality work that exceeds client expectations."
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

<Header title="About" />

  <!-- Steps2 Widget ****************** -->

  <Steps
    title="A little bit about me"
    items={[
      {
        title: '',
        description:
          "As a NAIT graduate based in Edmonton, Alberta, I've transitioned from being a freelancer with five years of practical experience to a passionate web developer and designer. <br> <br> My focus is on creating modern, user-friendly websites for small businesses, e-commerce stores, and personal portfolios. I specialize in responsive designs that are optimized for performance and search engine rankings, using HTML, CSS, JavaScript, Vue.js, PHP, and CMS platforms like WordPress. <br> <br> My commitment to timely delivery and exceeding client expectations ensures high-quality work and customer satisfaction.",
      },
    ]}
    image={{
      src: 'https://ik.imagekit.io/boxhuwbys/ja-web-design.webp?updatedAt=1716059668256',
      alt: 'Jeffrey Agyepong',
    }}
  />
  <TrustLogos />
  <Badges />
  <Skills />
</Layout>
