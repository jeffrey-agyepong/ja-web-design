---
import projectsData from '../api/projects.json';
---

<astro:fragment>
  <section id="projects" class="projects">
    <div class="container-py-16 md:py-20 lg:px-8 px-4 mx-auto">
      <h2 class="font-bold leading-tighter tracking-tighter font-heading text-heading text-3xl md:text-4xl text-center">
        Projects
      </h2>
      <p class="mt-4 text-muted text-xl text-center">A selection of projects we've worked on.</p>
      <div class="mx-auto grid w-full grid-cols-1 gap-8 pt-12 pb-12 sm:w-3/4 md:gap-10 lg:w-5/6 lg:grid-cols-2">
        {
          projectsData.projects.map((project) => (
            <a
              href="{project.link}"
              target="_blank"
              class="mx-auto transform transition-all hover:scale-105 md:mx-0 bg-slate-900 dark:bg-ternary-dark rounded-xl project-card hover:drop-shadow-3xl"
            >
              <img src={project.image} alt="{project.title}" class="w-full shadow rounded-t-xl" />

              <div class="px-4 py-6">
                <p class="font-general-semibold text-xl text-white font-semibold mb-2">{project.title}</p>
                <p class="font-general-medium text-lg text-white">{project.description}</p>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</astro:fragment>
