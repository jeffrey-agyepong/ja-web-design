---
export interface FAQ {
  question: string;
  answer: string;
}

const { faqs } = Astro.props;
---

<section class="pt-20 lg:pt-[120px] pb-20 lg:pb-[120px] faq overflow-x-hidden">
  <div class="container mx-auto">
    <div class="flex flex-wrap -mx-4">
      <div class="w-full px-4">
        <div class="text-center mx-auto mb-[60px] lg:mb-20 max-w-[620px]">
          <h2 class="font-bold leading-tighter tracking-tighter font-heading text-heading text-3xl md:text-4xl">
            Frequently Asked Questions
          </h2>
        </div>
      </div>
    </div>

    <div
      class="flex flex-wrap container mx-auto lg:max-w-screen-2xl lg:px-12"
      id="accordion-collapse"
      data-accordion="collapse"
    >
      <div class="w-full lg:w-1/2 px-4">
        {
          faqs.slice(0, Math.ceil(faqs.length / 2)).map((faq, index) => (
            <div
              class="single-faq w-full dark:bg-gray-900 bg-blue-500 rounded-lg p-5 sm:p-8 mb-8 wow fadeInUp"
              data-wow-delay={`${0.1 + index * 0.05}s`}
              style={`visibility: visible; animation-delay: ${0.1 + index * 0.05}s;`}
            >
              <button
                class="faq-btn flex items-center w-full text-left"
                data-accordion-target={`#accordion-collapse-body-${index + 1}`}
                aria-expanded="false"
                aria-controls={`accordion-collapse-body-${index + 1}`}
              >
                <span class="w-full max-w-[40px] h-10 flex items-center justify-center rounded-lg text-primary bg-opacity-5 mr-5">
                  <svg width="17" height="10" viewBox="0 0 17 10" class="fill-current icon">
                    <path
                      d="M7.28687 8.43257L7.28679 8.43265L7.29496 8.43985C7.62576 8.73124 8.02464 8.86001 8.41472 8.86001C8.83092 8.86001 9.22376 8.69083 9.53447 8.41713L9.53454 8.41721L9.54184 8.41052L15.7631 2.70784L15.7691 2.70231L15.7749 2.69659C16.0981 2.38028 16.1985 1.80579 15.7981 1.41393C15.4803 1.1028 14.9167 1.00854 14.5249 1.38489L8.41472 7.00806L2.29995 1.38063L2.29151 1.37286L2.28271 1.36548C1.93092 1.07036 1.38469 1.06804 1.03129 1.41393L1.01755 1.42738L1.00488 1.44184C0.69687 1.79355 0.695778 2.34549 1.0545 2.69659L1.05999 2.70196L1.06565 2.70717L7.28687 8.43257Z"
                      fill="#3056D3"
                      stroke="#3056D3"
                    />
                  </svg>
                </span>
                <span class="w-full" id={`accordion-collapse-heading-${index + 1}`}>
                  <span class="text-lg sm:text-lg font-medium dark:text-white text-black">{faq.question}</span>
                </span>
              </button>
              <div
                class="faq-content pl-[62px] hidden"
                id={`accordion-collapse-body-${index + 1}`}
                aria-labelledby={`accordion-collapse-heading-${index + 1}`}
              >
                <p class="text-lg text-black dark:text-white leading-relaxed py-3">{faq.answer}</p>
              </div>
            </div>
          ))
        }
      </div>
      <div class="w-full lg:w-1/2 px-4">
        {
          faqs.slice(Math.ceil(faqs.length / 2)).map((faq, index) => (
            <div
              class="single-faq w-full dark:bg-gray-900 bg-blue-500 rounded-lg p-5 sm:p-8 mb-8 wow fadeInUp"
              data-wow-delay={`${0.1 + (index + faqs.length / 2) * 0.05}s`}
              style={`visibility: visible; animation-delay: ${0.1 + (index + faqs.length / 2) * 0.05}s;`}
            >
              <button
                class="faq-btn flex items-center w-full text-left"
                data-accordion-target={`#accordion-collapse-body-${index + faqs.length / 2 + 1}`}
                aria-expanded="false"
                aria-controls={`accordion-collapse-body-${index + faqs.length / 2 + 1}`}
              >
                <span class="w-full max-w-[40px] h-10 flex items-center justify-center rounded-lg text-primary bg-opacity-5 mr-5">
                  <svg width="17" height="10" viewBox="0 0 17 10" class="fill-current icon">
                    <path
                      d="M7.28687 8.43257L7.28679 8.43265L7.29496 8.43985C7.62576 8.73124 8.02464 8.86001 8.41472 8.86001C8.83092 8.86001 9.22376 8.69083 9.53447 8.41713L9.53454 8.41721L9.54184 8.41052L15.7631 2.70784L15.7691 2.70231L15.7749 2.69659C16.0981 2.38028 16.1985 1.80579 15.7981 1.41393C15.4803 1.1028 14.9167 1.00854 14.5249 1.38489L8.41472 7.00806L2.29995 1.38063L2.29151 1.37286L2.28271 1.36548C1.93092 1.07036 1.38469 1.06804 1.03129 1.41393L1.01755 1.42738L1.00488 1.44184C0.69687 1.79355 0.695778 2.34549 1.0545 2.69659L1.05999 2.70196L1.06565 2.70717L7.28687 8.43257Z"
                      fill="#3056D3"
                      stroke="#3056D3"
                    />
                  </svg>
                </span>
                <span class="w-full" id={`accordion-collapse-heading-${index + faqs.length / 2 + 1}`}>
                  <span class="text-lg sm:text-lg font-medium dark:text-white text-black">{faq.question}</span>
                </span>
              </button>
              <div
                class="faq-content pl-[62px] hidden"
                id={`accordion-collapse-body-${index + faqs.length / 2 + 1}`}
                aria-labelledby={`accordion-collapse-heading-${index + faqs.length / 2 + 1}`}
              >
                <p class="text-lg text-black dark:text-white leading-relaxed py-3">{faq.answer}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
<style>
  .faq {
    font-family:  'Raleway','Segoe UI', Helvetica, 'Gill Sans', sans-serif;
  }
  .faq-btn {
  background-color: transparent; /* Ensure background stays transparent */
  outline: none; /* Remove default focus outline */
}

.faq-btn:focus,
.faq-btn:active {
    background-color: transparent; /* Prevent any background change */
}

</style>
