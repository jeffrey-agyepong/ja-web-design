---
import '@fontsource-variable/raleway';
import '@fontsource/lato';
import '~/assets/styles/tailwind.css';

import { I18N } from '~/utils/config';

import CommonMeta from '~/components/common/CommonMeta.astro';
import Favicons from '~/components/Favicons.astro';
import CustomStyles from '~/components/CustomStyles.astro';
import ApplyColorMode from '~/components/common/ApplyColorMode.astro';
import Metadata from '~/components/common/Metadata.astro';
import SiteVerification from '~/components/common/SiteVerification.astro';
import Analytics from '~/components/common/Analytics.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';

import { ViewTransitions } from 'astro:transitions';

// Uncomment line below to activate View Transitions
// import { ViewTransitions } from 'astro:transitions';

import type { MetaData as MetaDataType } from '~/types';

export interface Props {
  metadata?: MetaDataType;
}

const { metadata = {} } = Astro.props;
const { language, textDirection } = I18N;
---

<!doctype html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <CommonMeta />
    <Favicons />
    <CustomStyles />
    <ApplyColorMode />
    <Metadata {...metadata} />
    <SiteVerification />
    <Analytics />
    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "Website",
        "name": "J.A Web Design | Edmonton Web Design & Development",
        "url": "https://jawebdesign.ca/",
        "@id": "https://jawebdesign.ca/#website",
        "addressLocality": "Edmonton",
        "addressRegion": "AB",
        "addressCountry": "CA",
        "telephone": "7809837309",
        "email": "hello@jawebdesign.ca",
        "sameAs": [
          "https://www.instagram.com/j.a.webdesign"
        ]
      }
      </script>
      <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "WebPage",
        "@id": "https://jawebdesign.ca/#webpage",
        "url": "https://jawebdesign.ca/",
        "inLanguage": "en-ca",
        "name": "J.A Web Design | Edmonton Web Design & Development",
        "description": "J.A. Web Design is an award-winning company located in Edmonton, Alberta, specializing in custom web development and design. We create tailored websites for small to medium-sized businesses, non-profits, entrepreneurs, and outsourcing agencies across Canada.",
        "isPartOf": {
          "@id": "https://jawebdesign.ca/#website"
        }
      }
      </script>
    <link
      href="https://fonts.googleapis.com/css2?family=Marcellus+SC&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&family=Sintony:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <!-- Calendly link widget begin -->
    <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet" />
    <script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript" async></script>
    <!-- Uncomment line below to activate View Transitions -->
    <ViewTransitions fallback="swap" />
  </head>

  <body class="antialiased text-default bg-page tracking-tight">
    <slot />

    <BasicScripts />

    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
